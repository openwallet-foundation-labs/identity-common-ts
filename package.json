{
  "name": "identity-common-ts",
  "private": true,
  "description": "Environment agnostic TypeScript libraries and tools for working with digital identity",
  "packageManager": "pnpm@10.28.0+sha512.05df71d1421f21399e053fde567cea34d446fa02c76571441bfc1c7956e98e363088982d940465fd34480d4d90a0668bc12362f8aa88000a64e83d0b0e47be48",
  "repository": {
    "url": "https://github.com/openwallet-foundation-labs/identity-common-ts",
    "type": "git"
  },
  "license": "Apache-2.0",
  "scripts": {
    "types:check": "tsc --noEmit",
    "style:check": "biome check --unsafe",
    "style:fix": "biome check --write --unsafe",
    "md:check": "markdownlint-cli2 \"**/*.md\" \"#node_modules\"",
    "md:fix": "markdownlint-cli2 --fix \"**/*.md\" \"#node_modules\"",
    "build": "pnpm -r build",
    "test": "vitest",
    "create-package": "node scripts/create-package.mjs",
    "release": "pnpm build && pnpm changeset publish --no-git-tag 2>&1 | tee changeset-publish.log",
    "changeset-version": "pnpm changeset version && pnpm style:fix"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.14",
    "@changesets/cli": "^2.29.8",
    "@types/node": "^25.2.0",
    "markdownlint-cli2": "^0.18.1",
    "tsdown": "^0.20.2",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18",
    "@owf/identity-common": "workspace:*"
  },
  "engines": {
    "node": ">=20"
  }
}

{
  "$schema": "https://biomejs.dev/schemas/2.3.14/schema.json",
  "files": {
    "maxSize": 10000000
  },
  "formatter": {
    "lineWidth": 120,
    "indentStyle": "space"
  },
  "javascript": {
    "formatter": {
      "semicolons": "asNeeded",
      "quoteStyle": "single",
      "trailingCommas": "es5",
      "lineWidth": 120,
      "indentStyle": "space"
    }
  },
  "json": {
    "parser": {
      "allowComments": true
    }
  },
  "assist": { "actions": { "source": { "organizeImports": "on" } } },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "correctness": {
        "recommended": true,
        "noUnusedImports": "error"
      }
    }
  },
  "vcs": {
    "useIgnoreFile": true,
    "clientKind": "git",
    "enabled": true
  }
}
